{
  "name": "quynhvu/vq-checkout",
  "description": "VQ Checkout for WooCommerce - Vietnam shipping optimization",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "VÅ© Quynh",
      "email": "contact@quynhvu.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/extension-installer": "^1.3",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "VQCheckout\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VQCheckout\\Tests\\": "tests/phpunit/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpcs:fix": "phpcbf --standard=phpcs.xml",
    "phpstan": "phpstan analyse -c phpstan.neon",
    "test": "phpunit -c phpunit.xml",
    "test:coverage": "phpunit -c phpunit.xml --coverage-html coverage"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
